{
  "pipeline": {
    "generate": {
      "dependsOn": ["^generate"],
      "outputs": ["src/generated/**"]
    },
    "build": {
      "dependsOn": ["^build", "^generate"],
      "outputs": ["dist/**/*", ".next/**"],
      "cache": true
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "test": {
      "dependsOn": ["^test"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
