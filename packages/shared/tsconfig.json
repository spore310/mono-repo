{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2021",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "resolveJsonModule": true,

    "outDir": "dist",
    "rootDir": ".",
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "allowSyntheticDefaultImports": true,
    "types": ["jest", "eslint", "node"],
    "lib": ["DOM", "ES2022"]
  },
  "include": [
    "src/**/*",
    "../../prisma/src",
    "__tests__",
    "__mocks__/dbAuth.ts",
    "__mocks__/singleton.auth.ts",
    ".eslintrc.cjs"
  ]
}
