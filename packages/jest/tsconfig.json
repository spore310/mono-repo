{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "rootDir": ".",
    "resolveJsonModule": true,
    "types": ["jest", "node"]
  },
  "include": ["*.ts", "*.js"]
}
